# WhatIsMyAdaptor - Portainer Environment Template
# Copy these variables into Portainer's "Environment variables" section when creating the stack
# DO NOT commit real passwords to version control

# =============================================================================
# SECURITY CONFIGURATION (REQUIRED - CHANGE THESE!)
# =============================================================================
SECURITY_SALT=CHANGE_ME_BEFORE_DEPLOY_64_HEX_CHARACTERS_REQUIRED
MYSQL_ROOT_PASSWORD=change_me_root_password_20_plus_characters
MYSQL_PASSWORD=secure_password_change_me_20_plus_characters
REDIS_PASSWORD=secure_redis_password_change_me_20_plus_characters
WILLOW_ADMIN_PASSWORD=change_me_admin_password_20_plus_characters
REDIS_COMMANDER_PASSWORD=admin_password_change_me_20_plus_characters

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=WillowCMS
DEBUG=false
APP_FULL_BASE_URL=http://localhost:7770
APP_HTTP_PORT=8080

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MYSQL_DATABASE=cms
MYSQL_USER=cms_user
MYSQL_TEST_DATABASE=cms_test
MYSQL_TEST_USER=cms_user_test
MYSQL_PORT=3310

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_REPLY=hello@willowcms.app
EMAIL_NOREPLY=noreply@willowcms.app

# =============================================================================
# ADMIN USER CONFIGURATION
# =============================================================================
WILLOW_ADMIN_USERNAME=admin
WILLOW_ADMIN_EMAIL=admin@yourdomain.com

# =============================================================================
# SERVICE PORTS (adjust if needed to avoid conflicts)
# =============================================================================
PHPMYADMIN_PORT=7771
JENKINS_PORT=7772
MAILPIT_SMTP_PORT=7725
MAILPIT_UI_PORT=7773
REDIS_PORT=6379
REDIS_COMMANDER_PORT=7774

# =============================================================================
# DOCKER IMAGES (use pre-built images)
# =============================================================================
WILLOW_IMAGE=robjects/whatismyadapter_cms:portainer-swarm-build
JENKINS_IMAGE=robjects/whatismyadapter_jenkins:portainer-swarm-build

# =============================================================================
# RESOURCE LIMITS (adjust based on your server capacity)
# =============================================================================
WILLOWCMS_REPLICAS=2
WILLOWCMS_CPU_LIMIT=1.0
WILLOWCMS_MEMORY_LIMIT=1G
MYSQL_CPU_LIMIT=1.0
MYSQL_MEMORY_LIMIT=1G
JENKINS_CPU_LIMIT=1.0
JENKINS_MEMORY_LIMIT=1G

# =============================================================================
# OPTIONAL API KEYS (for AI features)
# =============================================================================
YOUTUBE_API_KEY=
TRANSLATE_API_KEY=

# =============================================================================
# REDIS COMMANDER AUTHENTICATION
# =============================================================================
REDIS_COMMANDER_USER=admin

# =============================================================================
# HOW TO GENERATE SECURE VALUES:
# =============================================================================
# SECURITY_SALT (64 hex characters):
#   python3 -c "import secrets; print(secrets.token_hex(32))"
#   OR
#   php -r 'echo bin2hex(random_bytes(32));'
#
# Strong Passwords (20+ characters):
#   Use a password manager or:
#   python3 -c "import secrets, string; print(''.join(secrets.choice(string.ascii_letters + string.digits + '!@#$%^&*') for i in range(24)))"
